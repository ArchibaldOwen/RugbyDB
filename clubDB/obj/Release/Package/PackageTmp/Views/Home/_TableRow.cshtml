@model clubDB.Models.club



<tr id="@Model.id">
    <td class="centerContent">@Html.DisplayFor(m => Model.Name)</td>
    <td class="centerContent">@Html.DisplayFor(m => Model.Established)</td>
    <td class="centerContent">@Html.DisplayFor(m => Model.Country)</td>
    <td class="centerContent">@Html.DisplayFor(m => Model.CurrentCoach)</td>
    <td><img src="@Url.Content(Model.Logo)" height="100" /> </td>
    <td class="centerButtons">
        @using (Ajax.BeginForm(
                                          actionName: "Cheer",
                                          controllerName: "Home",
                                          routeValues: new { id = Model.id },
                                          ajaxOptions: new AjaxOptions
                                          {
                                              UpdateTargetId = Model.id.ToString(),
                                              InsertionMode = InsertionMode.ReplaceWith
                                          }
                                  ))
        {
            <input id="Cheer" type="submit" value="Cheer" class="btn btn-outline-primary">
        }

        

    </td>
    <td class="centerContent"> &#128483;@Html.DisplayFor(m => Model.Cheer)</td>
    <td class="centerButtons">
        <button class="btn btn-outline-primary"> @Html.ActionLink("Edit", "Edit", new { id = Model.id })</button> |

        <button class="btn btn-outline-primary"> @Html.ActionLink("Details", "Details", new { id = Model.id })</button> |

        <button class="btn btn-outline-primary"> @Html.ActionLink("Delete", "Delete", new { id = Model.id })</button>
    </td>

</tr>