@model clubDB.Models.club
@Styles.Render("~/Content/forms.css")
@{
    ViewBag.Title = "Edit";
}

<div class="heading">
    Edit Club
</div>
<hr />

<section class="frontPage">
    <br /><br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken();

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text=danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(m => m.Established, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Established, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Established, "", new { @class = "text=danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Country, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Country, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Country, "", new { @class = "text=danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.CurrentCoach, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.CurrentCoach, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.CurrentCoach, "", new { @class = "text=danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Trophies, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Trophies, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ClubHomepage, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.ClubHomepage, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Stadium, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Stadium, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Capacity, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Capacity, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.NotablePlayers, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.NotablePlayers, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Rivalries, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Rivalries, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Logo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Logo, new { htmlAttributes = new { @class = "form-control" } })
                    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModalPicture">?</button>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Video, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Video, new { htmlAttributes = new { @class = "form-control" } })
                    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModalVideo">?</button>
                </div>
            </div>

            <div style="display:none;">
                <div class="form-group">
                    <label class="control-label col-md-2">Cheer</label>
                    <div class="col-md-10">
                        @Html.EditorFor(m => m.Cheer, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>


            <div class="retNav">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save Changes" class="btn btn-outline-primary" />
                    <button class="btn btn-outline-primary">  @Html.ActionLink("Back to Clubs", "Index") </button>
                </div>
                
            </div>
        </div>
            <br />
            <div id="myModalPicture" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Getting a picture URL</h4>
                        </div>
                        <div class="modal-body modalStyle">
                            <ol>
                                <li>Find a picture on the web that you want to use</li>
                                <li>Right-click on the picture</li>
                                <li>Select 'Copy image address' from the menu</li>
                                <li>Paste into the field on the left</li>
                            </ol>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>

            <div id="myModalVideo" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Getting a video URL</h4>
                        </div>
                        <div class="modal-body modalStyle">
                            <ol>
                                <li>Find a video on YouTube that you want to use</li>
                                <li>Right-click on the video</li>
                                <li>Select 'Copy embed code' from the menu</li>
                                <li>Paste the embed code into a text editor, e.g. Notepad</li>
                                <li>Copy the link in the 'src' tag</li>
                                <li>Paste into the field on the left</li>
                            </ol>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
    }
</section>